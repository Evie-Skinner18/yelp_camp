<% include partials/header %>

    <div class="container">
        <h1>Create a New Campground!</h1>
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <label for="inputCampgroundName">Campground name</label>
                <input type="text" name="name" class="form-control" placeholder="Enter campground name">
            </div>
            <div class="form-group">
                <label for="inputCampgroundUrl">Campground url</label>
                <input type="text" name="image" class="form-control" placeholder="Enter url">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>

